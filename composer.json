{
  "name": "onion/client",
  "require": {
    "daverandom/libdns": "^2.0",
    "onion/interfaces": "@dev",
    "onion/event-loop": "@dev"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "guzzlehttp/psr7": "^2.1",
    "onion/http": "@dev",
    "onion/server": "@dev",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "Onion\\Framework\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "scripts": {
    "fix": "phpcbf --standard=psr12 src/",
    "lint": "phpcs --standard=psr12 src/"
  }
}
